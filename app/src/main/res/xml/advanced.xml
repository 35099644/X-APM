<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/title_service">

        <Preference
            android:key="key_test_noter"
            android:summary="@string/summary_test_noter"
            android:title="@string/test_noter" />

        <Preference
            android:key="key_dump_module"
            android:summary="@string/summary_dump_module"
            android:title="@string/dump_module" />

        <Preference
            android:key="key_crash_module"
            android:summary="@string/summary_crash_module"
            android:title="@string/crash_module" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="key_3rd_ver_allowed"
            android:persistent="false"
            android:enabled="false"
            android:summary="@string/summary_allow_third_verifier"
            android:title="@string/title_allow_third_verifier" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_app">

        <SwitchPreference
            android:defaultValue="false"
            android:key="key_hide_app_icon"
            android:title="@string/title_hide_app_icon" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="dev_mode_enabled"
            android:summary="@string/summary_dev_mode"
            android:persistent="false"
            android:title="@string/title_dev_mode" />

    </PreferenceCategory>

</PreferenceScreen>