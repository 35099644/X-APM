<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="github.tornaco.xposedmoduletest">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.fingerprints.service.ACCESS_FINGERPRINT_MANAGER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".x.XApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeLight">
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="Easy implementation of App guard" />
        <meta-data
            android:name="xposedminversion"
            android:value="53" />

        <activity
            android:name=".ui.VerifyDisplayerActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:label="@string/title_default_verifyer"
            android:theme="@style/AppThemeLight.NoActionBar">
            <intent-filter>
                <action android:name="github.tornaco.xpose.app.guard.action.verify.displayer" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.PatternSetupActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_setup_code_new"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".ui.GuardAppNavActivity"
            android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.GuardAppNavActivityNoLauncher"
            android:excludeFromRecents="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="de.robv.android.xposed.category.MODULE_SETTINGS" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.GuardAppPickerActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_picker" />
        <activity
            android:name=".ui.activity.SecureSettings"
            android:excludeFromRecents="true"
            android:label="@string/title_secure"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".ui.activity.ExperimentSettings"
            android:excludeFromRecents="true"
            android:label="@string/title_exp"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".ui.activity.AdvancedSettings"
            android:excludeFromRecents="true"
            android:label="@string/title_advance"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".ui.activity.VerifierSettings"
            android:excludeFromRecents="true"
            android:label="@string/title_verifier"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".ui.activity.SettingsDashboardActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_settings"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".ui.PhotoViewerActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_view_photos" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <provider
            android:name=".provider.PackageProvider"
            android:authorities="github.tornaco.xposedmoduletest.package_provider"
            android:exported="true" />
    </application>

</manifest>