<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="github.tornaco.xposedmoduletest">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.fingerprints.service.ACCESS_FINGERPRINT_MANAGER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".xposed.XApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeLight">
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="Easy implementation of App guard" />
        <meta-data
            android:name="xposedminversion"
            android:value="53" />

        <activity
            android:name=".ui.activity.VerifyDisplayerActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:label="@string/title_default_verifyer"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeLight.NoActionBar">
            <intent-filter>
                <action android:name="github.tornaco.xpose.app.guard.action.verify.displayer" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.PatternSetupActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_setup_code_new"
            android:theme="@style/AppThemeLight.NoActionBar" />

        <activity
            android:name=".ui.activity.NavigatorActivity"
            android:excludeFromRecents="true"
            android:theme="@style/AppThemeLight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.GuardAppNavActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_app_guard" />
        <activity
            android:name=".ui.activity.GuardAppPickerActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_picker" />
        <activity
            android:name=".ui.activity.BootAppNavActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_app_boot" />
        <activity
            android:name=".ui.activity.BootAppPickerActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_picker" />
        <activity
            android:name=".ui.activity.StartAppNavActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_app_auto_start" />
        <activity
            android:name=".ui.activity.StartAppPickerActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_picker" />
        <activity
            android:name=".ui.activity.LockKillAppNavActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_app_lock_kill" />
        <activity
            android:name=".ui.activity.LockKillAppPickerActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_picker" />
        <activity
            android:name=".ui.activity.SecureGuardSettings"
            android:excludeFromRecents="true"
            android:label="@string/title_secure"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".ui.activity.ExperimentGuardSettings"
            android:excludeFromRecents="true"
            android:label="@string/title_exp"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".ui.activity.AdvancedGuardSettings"
            android:excludeFromRecents="true"
            android:label="@string/title_advance"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".ui.activity.VerifierGuardSettings"
            android:excludeFromRecents="true"
            android:label="@string/title_verifier"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".ui.activity.SettingsDashboardActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_settings"
            android:theme="@style/AppThemeLight.NoActionBar" />
        <activity
            android:name=".ui.activity.PhotoViewerActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_view_photos" />
        <activity
            android:name=".ui.activity.BlockRecordViewerActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_block_viewer" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <provider
            android:name=".provider.AppGuardPackageProvider"
            android:authorities="github.tornaco.xposedmoduletest.app_guard_package_provider"
            android:exported="true" />
        <provider
            android:name=".provider.BootPackageProvider"
            android:authorities="github.tornaco.xposedmoduletest.boot_package_provider"
            android:exported="true" />
        <provider
            android:name=".provider.AutoStartPackageProvider"
            android:authorities="github.tornaco.xposedmoduletest.auto_start_package_provider"
            android:exported="true" />
        <provider
            android:name=".provider.LockKillPackageProvider"
            android:authorities="github.tornaco.xposedmoduletest.lock_kill_package_provider"
            android:exported="true" />
        <provider
            android:name=".provider.BlockRecordProvider"
            android:authorities="github.tornaco.xposedmoduletest.block_record_provider"
            android:exported="true" />

        <service
            android:name=".service.VerboseLogService"
            android:exported="false" />
    </application>

</manifest>